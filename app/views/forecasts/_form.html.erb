<%= form_with(url: forecasts_path, 
              local: true, 
              method: :get,
              data: { controller: "places",
                      action: "google-maps-callback@window->places#initMap" }) do |form| %>

  <div class="d-flex">
    <div>
      <div class="form-group">
        <%= form.label :address %>
        <%= form.search_field :address, class: 'form-control', data: { target: "places.field", action: "keydown->places#keydown" }%>
      </div>

      <div class="form-group">
        <%= form.hidden_field :latitude, class: 'form-control', data: { target: "places.latitude" } %>
        <%= form.hidden_field :longitude, class: 'form-control', data: { target: "places.longitude" } %>
      </div>
    </div>
  </div>

  <div>
    <%= form.submit "Search" %>
  </div>
<% end %>
